{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    "^[0-9]{2}-[0-9]{2}-[0-9]{4}$": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[a-z0-9_]+$": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "name": {
              "type": "string",
              "description": "Restraurant name"
            },
            "notes": {
              "type": "string",
              "description": "Additional notes to consider"
            },
            "hygiene": {
              "type": "integer",
              "description": "Hygiene rating from 0 to 10. Default is 8",
              "minimum": 0,
              "maximum": 10,
              "default": 8
            },
            "service": {
              "type": "integer",
              "description": "Service rating from 0 to 10. Default is 8",
              "minimum": 0,
              "maximum": 10,
              "default": 8
            },
            "tax": {
              "type": "integer",
              "description": "Tax rate in percentage, including service tax",
              "minimum": 0,
              "maximum": 100
            },
            "orders": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                  "name",
                  "price",
                  "taste",
                  "worthiness"
                ],
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Menu name"
                  },
                  "notes": {
                    "type": "string",
                    "description": "Additional notes to consider"
                  },
                  "price": {
                    "type": "integer",
                    "description": "Price of the menu"
                  },
                  "taste": {
                    "type": "integer",
                    "description": "Taste of the food rating from 0 to 10",
                    "minimum": 0,
                    "maximum": 10
                  },
                  "worthiness": {
                    "type": "integer",
                    "description": "Is it worth it? 0 to 10",
                    "minimum": 0,
                    "maximum": 10
                  }
                }
              }
            }
          },
          "required": [
            "name",
            "orders"
          ]
        }
      }
    }
  }
}