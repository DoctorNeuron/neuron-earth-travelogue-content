{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    "^[0-9]{2}-[0-9]{2}-[0-9]{4}$": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^(bus|mrt|train|lrt|hsr|microbus)-[0-9]+$": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["bus", "microbus", "mrt", "train-commuter", "train", "lrt", "hsr"],
              "description": "Mode of Transportation"
            },
            "company": {
              "type": "string",
              "description": "Nama company yang menjalankan, misal Transjakarta"
            },
            "price": {
              "type": "integer",
              "description": "Price for whole trip"
            },
            "routes": {
              "type": "array",
              "items": {                
                "type": "object",
                "required": [
                  "name",
                  "route"
                ],
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Number of corridor or line"
                  },
                  "route": {
                    "type": "array",
                    "description": "Station stops passed",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "required": [
            "type",
            "price",
            "routes",
            "company"
          ]
        }
      }
    }
  }
}